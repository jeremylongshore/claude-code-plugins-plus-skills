---
const categories = [
  'productivity',
  'security',
  'devops',
  'ai-ml',
  'database',
  'api-development',
  'crypto',
  'finance',
  'performance',
  'business-tools',
  'community',
  'mcp',
  'examples',
  'life-sciences',
  'jeremy-genkit',
  'jeremy-google-adk',
  'jeremy-vertex-ai',
  'ai-agency',
  'skill-enhancers'
];
---

<div class="search-section">
  <div class="container">
    <div class="search-bar">
      <div class="search-input-wrapper">
        <svg class="search-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 5.196a7.5 7.5 0 0010.607 10.607z" />
        </svg>
        <input
          type="text"
          id="plugin-search"
          placeholder="Search plugins by name, description, or keyword... (fuzzy search enabled)"
          class="search-input"
        />
        <button id="clear-search" class="clear-btn" style="display: none;">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
        <span class="search-hint">Press <kbd>Ctrl+K</kbd> to focus</span>
      </div>

      <div class="filters">
        <select id="category-filter" class="filter-select">
          <option value="">All Categories</option>
          {categories.map(cat => (
            <option value={cat}>
              {cat.split('-').map(w => w.charAt(0).toUpperCase() + w.slice(1)).join(' ')}
            </option>
          ))}
        </select>

        <select id="sort-filter" class="filter-select">
          <option value="relevance">Sort: Relevance</option>
          <option value="name">Sort: A-Z</option>
          <option value="name-desc">Sort: Z-A</option>
          <option value="featured">Sort: Featured</option>
        </select>
      </div>
    </div>

    <div class="search-results-info">
      <span id="results-count" class="results-count"></span>
      <span id="search-mode" class="search-mode"></span>
      <button id="reset-filters" class="reset-btn" style="display: none;">
        Reset Filters
      </button>
    </div>
  </div>
</div>

<style>
  .search-section {
    padding: 2rem 0;
    background: var(--brand-light);
    border-top: 1px solid var(--brand-light-gray);
    border-bottom: 1px solid var(--brand-light-gray);
    position: sticky;
    top: 0;
    z-index: 100;
    backdrop-filter: blur(10px);
    background: rgba(250, 249, 245, 0.95);
  }

  .search-bar {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .search-input-wrapper {
    position: relative;
    flex: 1;
  }

  .search-icon {
    position: absolute;
    left: 1rem;
    top: 50%;
    transform: translateY(-50%);
    width: 1.25rem;
    height: 1.25rem;
    color: var(--brand-mid-gray);
    pointer-events: none;
  }

  .search-input {
    width: 100%;
    padding: 0.875rem 3rem 0.875rem 3rem;
    background: var(--brand-light-gray);
    border: 2px solid var(--brand-light-gray);
    border-radius: 0.75rem;
    color: var(--brand-dark);
    font-size: 1rem;
    font-family: var(--font-sans);
    transition: all var(--transition-base);
  }

  .search-input:focus {
    outline: none;
    border-color: var(--brand-orange);
    box-shadow: 0 0 0 3px rgba(217, 119, 87, 0.1);
  }

  .search-input::placeholder {
    color: var(--brand-mid-gray);
  }

  .search-hint {
    position: absolute;
    right: 3.5rem;
    top: 50%;
    transform: translateY(-50%);
    font-size: 0.75rem;
    color: var(--brand-mid-gray);
    pointer-events: none;
  }

  .search-hint kbd {
    display: inline-block;
    padding: 0.125rem 0.375rem;
    background: var(--brand-light-gray);
    border: 1px solid var(--brand-mid-gray);
    border-radius: 0.25rem;
    font-family: monospace;
    font-size: 0.6875rem;
  }

  .clear-btn {
    position: absolute;
    right: 1rem;
    top: 50%;
    transform: translateY(-50%);
    width: 1.5rem;
    height: 1.5rem;
    padding: 0;
    background: var(--brand-light-gray);
    border: none;
    border-radius: 50%;
    color: var(--brand-mid-gray);
    cursor: pointer;
    transition: all var(--transition-base);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .clear-btn:hover {
    background: var(--brand-mid-gray);
    color: var(--brand-dark);
  }

  .clear-btn svg {
    width: 1rem;
    height: 1rem;
  }

  .filters {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .filter-select {
    flex: 1;
    min-width: 200px;
    padding: 0.75rem 1rem;
    background: var(--brand-light-gray);
    border: 2px solid var(--brand-light-gray);
    border-radius: 0.75rem;
    color: var(--brand-dark);
    font-size: 0.875rem;
    font-family: var(--font-sans);
    cursor: pointer;
    transition: all var(--transition-base);
  }

  .filter-select:focus {
    outline: none;
    border-color: var(--brand-orange);
    box-shadow: 0 0 0 3px rgba(217, 119, 87, 0.1);
  }

  .filter-select:hover {
    border-color: var(--brand-mid-gray);
  }

  .search-results-info {
    margin-top: 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .results-count {
    font-size: 0.875rem;
    color: var(--brand-mid-gray);
    font-weight: 500;
  }

  .search-mode {
    font-size: 0.75rem;
    color: var(--brand-orange);
    font-weight: 500;
    padding: 0.25rem 0.5rem;
    background: rgba(217, 119, 87, 0.1);
    border-radius: 0.375rem;
  }

  .reset-btn {
    padding: 0.5rem 1rem;
    background: var(--brand-light-gray);
    border: 1px solid var(--brand-light-gray);
    border-radius: 0.5rem;
    color: var(--brand-mid-gray);
    font-size: 0.875rem;
    font-weight: 500;
    cursor: pointer;
    transition: all var(--transition-base);
    font-family: var(--font-sans);
  }

  .reset-btn:hover {
    background: var(--brand-light-gray);
    border-color: var(--brand-mid-gray);
    color: var(--brand-dark);
  }

  @media (max-width: 768px) {
    .search-section {
      position: relative;
    }

    .search-hint {
      display: none;
    }

    .filters {
      flex-direction: column;
    }

    .filter-select {
      min-width: 100%;
    }

    .search-results-info {
      flex-direction: column;
      align-items: flex-start;
    }
  }
</style>

<script>
  import Fuse from 'fuse.js';

  // Types
  interface Plugin {
    name: string;
    description: string;
    keywords?: string[];
    category: string;
    featured?: boolean;
  }

  // State
  let fuse: Fuse<Plugin> | null = null;
  let allPlugins: Plugin[] = [];
  let fuseEnabled = false;

  // DOM Elements
  const searchInput = document.getElementById('plugin-search') as HTMLInputElement;
  const clearBtn = document.getElementById('clear-search') as HTMLButtonElement;
  const categoryFilter = document.getElementById('category-filter') as HTMLSelectElement;
  const sortFilter = document.getElementById('sort-filter') as HTMLSelectElement;
  const resultsCount = document.getElementById('results-count') as HTMLSpanElement;
  const searchMode = document.getElementById('search-mode') as HTMLSpanElement;
  const resetBtn = document.getElementById('reset-filters') as HTMLButtonElement;

  // Initialize Fuse.js
  function initializeFuse() {
    const pluginCards = Array.from(document.querySelectorAll('.plugin-card'));

    allPlugins = pluginCards.map((card) => ({
      name: card.getAttribute('data-name') || '',
      description: card.getAttribute('data-description') || '',
      keywords: (card.getAttribute('data-keywords') || '').split(',').map(k => k.trim()),
      category: card.getAttribute('data-category') || '',
      featured: card.getAttribute('data-featured') === 'true',
    }));

    fuse = new Fuse(allPlugins, {
      keys: [
        { name: 'name', weight: 3 },
        { name: 'description', weight: 2 },
        { name: 'keywords', weight: 1.5 }
      ],
      threshold: 0.4,
      distance: 100,
      minMatchCharLength: 2,
      includeScore: true,
      useExtendedSearch: true,
    });

    fuseEnabled = true;
    searchMode.textContent = `üîç Fuzzy Search Active (${allPlugins.length} plugins indexed)`;
    searchMode.style.display = 'inline-block';
  }

  // Update plugin display with fuzzy search
  function updatePluginDisplay() {
    const searchTerm = searchInput.value.trim();
    const selectedCategory = categoryFilter.value;
    const sortBy = sortFilter.value;

    const pluginCards = Array.from(document.querySelectorAll('.plugin-card'));
    let visibleCount = 0;
    const matchedNames = new Set<string>();

    // Use fuzzy search if enabled and search term exists
    if (fuseEnabled && fuse && searchTerm.length >= 2) {
      const results = fuse.search(searchTerm);
      results.forEach(result => {
        matchedNames.add(result.item.name);
      });

      pluginCards.forEach((card) => {
        const name = card.getAttribute('data-name') || '';
        const category = card.getAttribute('data-category') || '';

        const matchesSearch = matchedNames.has(name);
        const matchesCategory = !selectedCategory || category === selectedCategory;

        if (matchesSearch && matchesCategory) {
          (card as HTMLElement).style.display = '';
          visibleCount++;
        } else {
          (card as HTMLElement).style.display = 'none';
        }
      });
    } else {
      // Fallback to basic substring search
      pluginCards.forEach((card) => {
        const name = card.getAttribute('data-name')?.toLowerCase() || '';
        const description = card.getAttribute('data-description')?.toLowerCase() || '';
        const keywords = card.getAttribute('data-keywords')?.toLowerCase() || '';
        const category = card.getAttribute('data-category') || '';

        const searchLower = searchTerm.toLowerCase();
        const matchesSearch = !searchTerm ||
          name.includes(searchLower) ||
          description.includes(searchLower) ||
          keywords.includes(searchLower);

        const matchesCategory = !selectedCategory || category === selectedCategory;

        if (matchesSearch && matchesCategory) {
          (card as HTMLElement).style.display = '';
          visibleCount++;
        } else {
          (card as HTMLElement).style.display = 'none';
        }
      });
    }

    // Sort visible plugins
    const containers = document.querySelectorAll('.plugins-grid');
    containers.forEach((container) => {
      const cardsInContainer = Array.from(container.querySelectorAll('.plugin-card'));
      const visibleCards = cardsInContainer.filter(card =>
        (card as HTMLElement).style.display !== 'none'
      );

      visibleCards.sort((a, b) => {
        const aName = a.getAttribute('data-name') || '';
        const bName = b.getAttribute('data-name') || '';
        const aFeatured = a.getAttribute('data-featured') === 'true';
        const bFeatured = b.getAttribute('data-featured') === 'true';

        if (sortBy === 'relevance' && fuseEnabled && searchTerm) {
          // Sort by fuzzy search score (already sorted by Fuse.js)
          const aIndex = matchedNames.has(aName) ? Array.from(matchedNames).indexOf(aName) : 999;
          const bIndex = matchedNames.has(bName) ? Array.from(matchedNames).indexOf(bName) : 999;
          return aIndex - bIndex;
        } else if (sortBy === 'featured') {
          if (aFeatured && !bFeatured) return -1;
          if (!aFeatured && bFeatured) return 1;
          return aName.localeCompare(bName);
        } else if (sortBy === 'name-desc') {
          return bName.localeCompare(aName);
        } else {
          return aName.localeCompare(bName);
        }
      });

      visibleCards.forEach(card => container.appendChild(card));
    });

    // Update UI
    const total = pluginCards.length;
    resultsCount.textContent = `Showing ${visibleCount} of ${total} plugins`;

    if (searchTerm && fuseEnabled) {
      const accuracy = ((visibleCount / total) * 100).toFixed(0);
      resultsCount.textContent += ` (${accuracy}% match)`;
    }

    clearBtn.style.display = searchTerm ? 'flex' : 'none';
    const hasFilters = searchTerm || selectedCategory || sortBy !== 'relevance';
    resetBtn.style.display = hasFilters ? 'block' : 'none';
  }

  // Event listeners
  searchInput.addEventListener('input', updatePluginDisplay);
  categoryFilter.addEventListener('change', updatePluginDisplay);
  sortFilter.addEventListener('change', updatePluginDisplay);

  clearBtn.addEventListener('click', () => {
    searchInput.value = '';
    updatePluginDisplay();
    searchInput.focus();
  });

  resetBtn.addEventListener('click', () => {
    searchInput.value = '';
    categoryFilter.value = '';
    sortFilter.value = 'relevance';
    updatePluginDisplay();
  });

  // Keyboard shortcuts
  document.addEventListener('keydown', (e) => {
    // Ctrl+K or Cmd+K to focus search
    if ((e.ctrlKey || e.metaKey) && e.key === 'k') {
      e.preventDefault();
      searchInput.focus();
      searchInput.select();
    }

    // Escape to clear search
    if (e.key === 'Escape' && document.activeElement === searchInput) {
      searchInput.value = '';
      updatePluginDisplay();
      searchInput.blur();
    }
  });

  // Initialize on page load
  document.addEventListener('DOMContentLoaded', () => {
    initializeFuse();
    updatePluginDisplay();
  });

  // Also initialize immediately (for SPAs)
  if (document.readyState === 'complete' || document.readyState === 'interactive') {
    setTimeout(() => {
      initializeFuse();
      updatePluginDisplay();
    }, 100);
  }
</script>
