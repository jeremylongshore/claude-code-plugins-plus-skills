---
import BaseLayout from '../../layouts/BaseLayout.astro';

// Playbooks Index Page
const playbooks = [
  {
    slug: '01-multi-agent-rate-limits',
    title: 'Multi-Agent Rate Limits',
    description: 'Prevent API throttling in concurrent multi-agent systems. Token bucket algorithms, sliding windows, priority queues, and backpressure handling for Claude API rate limits.',
    category: 'Cost',
    wordCount: 2800,
    featured: false
  },
  {
    slug: '02-cost-caps',
    title: 'Cost Caps & Budget Management',
    description: 'Hard budget controls for AI spending. Real-time spend tracking, automatic shutoffs, team quotas, and financial safeguards to prevent runaway costs.',
    category: 'Cost',
    wordCount: 3200,
    featured: false
  },
  {
    slug: '03-mcp-reliability',
    title: 'MCP Server Reliability',
    description: 'Self-healing MCP servers with circuit breakers, exponential backoff, health checks, and automatic recovery. Production-grade Model Context Protocol implementations.',
    category: 'Infrastructure',
    wordCount: 3500,
    featured: true
  },
  {
    slug: '04-ollama-migration',
    title: 'Ollama Migration Guide',
    description: 'Switch from OpenAI/Anthropic to self-hosted LLMs. Complete migration path: local setup, prompt translation, performance benchmarks, and cost analysis.',
    category: 'Infrastructure',
    wordCount: 4500,
    featured: false
  },
  {
    slug: '05-incident-debugging',
    title: 'Incident Debugging Playbook',
    description: 'SEV-1/2/3/4 incident response protocols. Log analysis, root cause investigation (5 Whys, Fishbone), postmortem templates, and on-call procedures.',
    category: 'Operations',
    wordCount: 5000,
    featured: false
  },
  {
    slug: '06-self-hosted-stack',
    title: 'Self-Hosted Stack Setup',
    description: 'Full infrastructure deployment with Docker/Kubernetes. Ollama, PostgreSQL, Redis, Prometheus, Grafana, Nginx - complete production stack with monitoring and backups.',
    category: 'Infrastructure',
    wordCount: 5500,
    featured: true
  },
  {
    slug: '07-compliance-audit',
    title: 'Compliance & Audit Guide',
    description: 'SOC 2, GDPR, HIPAA, PCI DSS implementation. Audit logging with immutable signatures, RBAC, data privacy (PII redaction), and regulatory compliance.',
    category: 'Security',
    wordCount: 6000,
    featured: false
  },
  {
    slug: '08-team-presets',
    title: 'Team Presets & Workflows',
    description: 'Team standardization and collaboration. Plugin bundles, workflow templates, automated onboarding, and multi-layer configuration hierarchy (org/team/project/individual).',
    category: 'Operations',
    wordCount: 5000,
    featured: false
  },
  {
    slug: '09-cost-attribution',
    title: 'Cost Attribution System',
    description: 'Multi-dimensional cost tracking (team/project/user/workflow). Automatic tagging, chargeback models, budget enforcement, and usage analytics for AI operations.',
    category: 'Cost',
    wordCount: 5500,
    featured: true
  },
  {
    slug: '10-progressive-enhancement',
    title: 'Progressive Enhancement Patterns',
    description: 'Safe AI feature rollout strategies. Feature flags (0% → 100%), A/B testing, canary deployments, graceful degradation, and automated rollback on failures.',
    category: 'Operations',
    wordCount: 5500,
    featured: false
  },
  {
    slug: '11-advanced-tool-use',
    title: 'Advanced Tool Use',
    description: 'Dynamic tool discovery, programmatic orchestration, and parameter guidance. Tool Search Tool (85% token reduction), Programmatic Tool Calling (37% efficiency gains), and Tool Use Examples (90% parameter accuracy). Enterprise-scale agent architecture.',
    category: 'AI Architecture',
    wordCount: 6500,
    featured: true
  }
];

const categories = Array.from(new Set(playbooks.map(p => p.category))).sort();
const totalWords = playbooks.reduce((sum, p) => sum + p.wordCount, 0);
const featuredPlaybooks = playbooks.filter(p => p.featured);
---

<BaseLayout
  title="Production Playbooks | Claude Code Plugins"
  description="Comprehensive technical guides for building production-grade Claude Code plugin systems. 11 playbooks covering AI architecture, cost management, infrastructure, operations, and compliance."
>
  <div class="playbooks-index">
    <!-- Hero Section -->
    <section class="hero">
      <div class="container">
        <div class="hero-content">
          <span class="hero-badge">Production Engineering</span>
          <h1 class="hero-title">
            <span class="gradient-text">Production Playbooks</span>
          </h1>
          <p class="hero-subtitle">
            Comprehensive technical guides for building production-grade Claude Code plugin systems. Each playbook provides deep implementation details, production-ready code examples, and real-world patterns learned from operating large-scale AI agent deployments.
          </p>

          <div class="hero-stats">
            <div class="stat-item">
              <div class="stat-number">{playbooks.length}</div>
              <div class="stat-label">Playbooks</div>
            </div>
            <div class="stat-divider"></div>
            <div class="stat-item">
              <div class="stat-number">{Math.round(totalWords / 1000)}k</div>
              <div class="stat-label">Words</div>
            </div>
            <div class="stat-divider"></div>
            <div class="stat-item">
              <div class="stat-number">{categories.length}</div>
              <div class="stat-label">Categories</div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Filter & Search -->
    <section class="filter-section">
      <div class="container">
        <div class="filter-header">
          <h2 class="filter-cta">Choose Your Focus Area</h2>
          <p class="filter-subtitle">Select a category to explore production-ready guides</p>
        </div>
        <div class="filter-controls">
          <button class="filter-btn active" data-category="all">All Playbooks</button>
          {categories.map(category => (
            <button class="filter-btn" data-category={category}>{category}</button>
          ))}
        </div>
      </div>
    </section>

    <!-- Featured Playbooks -->
    {featuredPlaybooks.length > 0 && (
      <section class="featured-section">
        <div class="container">
          <h2 class="section-title">Featured Playbooks</h2>
          <div class="playbooks-grid featured-grid">
            {featuredPlaybooks.map(playbook => (
              <a href={`/playbooks/${playbook.slug}`} class="playbook-card featured-card" data-category={playbook.category}>
                <div class="card-header">
                  <span class="category-badge">{playbook.category}</span>
                  <span class="featured-badge">Featured</span>
                </div>
                <h3 class="card-title">{playbook.title}</h3>
                <p class="card-description">{playbook.description}</p>
                <div class="card-meta">
                  <span class="meta-item">~{Math.round(playbook.wordCount / 200)} min read</span>
                  <span class="meta-divider">•</span>
                  <span class="meta-item">{playbook.wordCount.toLocaleString()} words</span>
                </div>
              </a>
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- All Playbooks -->
    <section class="playbooks-section">
      <div class="container">
        <h2 class="section-title">All Playbooks</h2>
        <div class="playbooks-grid">
          {playbooks.map(playbook => (
            <a href={`/playbooks/${playbook.slug}`} class="playbook-card" data-category={playbook.category}>
              <div class="card-header">
                <span class="category-badge">{playbook.category}</span>
              </div>
              <h3 class="card-title">{playbook.title}</h3>
              <p class="card-description">{playbook.description}</p>
              <div class="card-meta">
                <span class="meta-item">~{Math.round(playbook.wordCount / 200)} min read</span>
                <span class="meta-divider">•</span>
                <span class="meta-item">{playbook.wordCount.toLocaleString()} words</span>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>

    <!-- Back to Home -->
    <section class="footer-section">
      <div class="container">
        <a href="/" class="back-link">← Back to Home</a>
      </div>
    </section>
  </div>

  <style>
    .playbooks-index {
      min-height: 100vh;
      background: var(--brand-light);
      color: var(--brand-dark);
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 2rem;
    }

    /* Hero Section */
    .hero {
      padding: 4rem 0 3rem;
      position: relative;
      overflow: hidden;
      background: linear-gradient(135deg, var(--brand-orange) 0%, var(--brand-orange-dark) 100%);
      color: white;
    }

    .hero-content {
      position: relative;
      z-index: 1;
      text-align: center;
      max-width: 900px;
      margin: 0 auto;
    }

    .hero-badge {
      display: inline-block;
      background: rgba(255, 255, 255, 0.15);
      color: white;
      padding: 0.5rem 1rem;
      border-radius: 0.5rem;
      font-size: 0.875rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      border: 1px solid rgba(255, 255, 255, 0.25);
      margin-bottom: 1.5rem;
    }

    .hero-title {
      font-size: clamp(2.5rem, 5vw, 4rem);
      font-weight: 900;
      letter-spacing: -0.025em;
      margin-bottom: 1.5rem;
      line-height: 1.1;
    }

    .gradient-text {
      color: white;
    }

    .hero-subtitle {
      font-size: clamp(1rem, 2vw, 1.25rem);
      color: rgba(255, 255, 255, 0.9);
      margin-bottom: 2.5rem;
      line-height: 1.6;
      max-width: 800px;
      margin-left: auto;
      margin-right: auto;
    }

    .hero-stats {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 2rem;
      margin-bottom: 3rem;
      flex-wrap: wrap;
    }

    .stat-item {
      text-align: center;
    }

    .stat-number {
      font-size: 2.5rem;
      font-weight: 900;
      color: white;
      line-height: 1;
      margin-bottom: 0.5rem;
    }

    .stat-label {
      font-size: 0.875rem;
      color: rgba(255, 255, 255, 0.8);
      text-transform: uppercase;
      letter-spacing: 0.05em;
      font-weight: 600;
    }

    .stat-divider {
      width: 1px;
      height: 3rem;
      background: rgba(255, 255, 255, 0.3);
    }

    /* Filter Section */
    .filter-section {
      padding: 3rem 0;
      background: var(--brand-light-gray);
      border-top: 1px solid var(--brand-light-gray);
      border-bottom: 1px solid var(--brand-light-gray);
    }

    .filter-header {
      text-align: center;
      margin-bottom: 2rem;
    }

    .filter-cta {
      font-size: 1.75rem;
      font-weight: 800;
      color: var(--brand-dark);
      margin-bottom: 0.5rem;
    }

    .filter-subtitle {
      font-size: 1rem;
      color: var(--brand-mid-gray);
    }

    .filter-controls {
      display: flex;
      justify-content: center;
      gap: 1rem;
      flex-wrap: wrap;
    }

    .filter-btn {
      background: white;
      color: var(--brand-mid-gray);
      border: 1px solid var(--brand-light-gray);
      padding: 0.625rem 1.25rem;
      border-radius: 0.5rem;
      font-size: 0.875rem;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.2s ease;
      font-family: var(--font-sans);
    }

    .filter-btn:hover {
      color: var(--brand-orange);
      border-color: var(--brand-orange);
      background: white;
    }

    .filter-btn.active {
      background: var(--brand-orange);
      color: white;
      border-color: var(--brand-orange);
    }

    /* Section Styles */
    .featured-section,
    .playbooks-section {
      padding: 3rem 0;
    }

    .section-title {
      font-size: 2rem;
      font-weight: 800;
      color: var(--brand-dark);
      margin-bottom: 2rem;
    }

    /* Playbooks Grid */
    .playbooks-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
      gap: 1.5rem;
    }

    .featured-grid {
      grid-template-columns: repeat(auto-fill, minmax(400px, 1fr));
    }

    .playbook-card {
      background: white;
      border: 1px solid var(--brand-light-gray);
      border-radius: 0.75rem;
      padding: 1.5rem;
      display: flex;
      flex-direction: column;
      gap: 1rem;
      transition: all 0.2s ease;
      text-decoration: none;
      color: inherit;
    }

    .playbook-card:hover {
      border-color: var(--brand-orange);
      box-shadow: 0 4px 12px rgba(217, 119, 87, 0.15);
      transform: translateY(-2px);
    }

    .featured-card {
      background: linear-gradient(135deg, rgba(217, 119, 87, 0.05) 0%, rgba(217, 119, 87, 0.02) 100%);
      border-color: rgba(217, 119, 87, 0.2);
    }

    .card-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      gap: 0.75rem;
    }

    .category-badge {
      display: inline-block;
      background: rgba(217, 119, 87, 0.1);
      color: var(--brand-orange);
      padding: 0.375rem 0.75rem;
      border-radius: 0.375rem;
      font-size: 0.75rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      border: 1px solid rgba(217, 119, 87, 0.2);
    }

    .featured-badge {
      display: inline-block;
      background: var(--brand-orange);
      color: white;
      padding: 0.375rem 0.75rem;
      border-radius: 0.375rem;
      font-size: 0.75rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }

    .card-title {
      font-size: 1.5rem;
      font-weight: 700;
      color: var(--brand-dark);
      line-height: 1.3;
    }

    .card-description {
      flex: 1;
      font-size: 0.9375rem;
      color: var(--brand-mid-gray);
      line-height: 1.6;
    }

    .card-meta {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      font-size: 0.875rem;
      color: var(--brand-mid-gray);
      padding-top: 1rem;
      border-top: 1px solid var(--brand-light-gray);
    }

    .meta-divider {
      color: var(--brand-light-gray);
    }

    /* Footer Section */
    .footer-section {
      padding: 3rem 0;
      text-align: center;
    }

    .back-link {
      color: var(--brand-orange);
      font-weight: 600;
      font-size: 1rem;
      transition: color 0.15s ease;
    }

    .back-link:hover {
      color: var(--brand-orange-dark);
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      .playbooks-grid,
      .featured-grid {
        grid-template-columns: 1fr;
      }

      .hero {
        padding: 2rem 0;
      }

      .hero-stats {
        gap: 1rem;
      }

      .stat-number {
        font-size: 2rem;
      }

      .stat-divider {
        height: 2rem;
      }

      .filter-controls {
        gap: 0.5rem;
      }

      .filter-btn {
        padding: 0.5rem 1rem;
        font-size: 0.8125rem;
      }
    }
  </style>

  <script>
    // Category filtering
    document.addEventListener('DOMContentLoaded', () => {
      const filterBtns = document.querySelectorAll('.filter-btn');
      const playbookCards = document.querySelectorAll('.playbook-card');

      filterBtns.forEach(btn => {
        btn.addEventListener('click', () => {
          const category = btn.dataset.category;

          // Update active button
          filterBtns.forEach(b => b.classList.remove('active'));
          btn.classList.add('active');

          // Filter cards
          playbookCards.forEach(card => {
            if (category === 'all' || card.dataset.category === category) {
              card.style.display = 'flex';
            } else {
              card.style.display = 'none';
            }
          });
        });
      });
    });
  </script>
  </div>
</BaseLayout>
